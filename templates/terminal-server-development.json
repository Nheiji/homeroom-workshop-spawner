{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "terminal-server-development",
        "annotations": {
            "openshift.io/display-name": "Terminal Server (Development)"
        }
    },
    "parameters": [
        {
            "name": "PROJECT_NAME",
            "value": "",
            "required": true
        },
        {
            "name": "CLUSTER_SUBDOMAIN",
            "value": "",
            "required": true
        },
        {
            "name": "APPLICATION_NAME",
            "value": "terminal",
            "required": true
        },
        {
            "name": "GIT_REPOSITORY_URL",
            "value": "https://github.com/openshift-labs/workshop-spawner.git",
            "required": true
        },
        {
            "name": "GIT_REPOSITORY_REF",
            "value": "develop",
            "required": true
        },
        {
            "name": "SPAWNER_MEMORY",
            "value": "768Mi"
        },
        {
            "name": "WORKSHOP_MEMORY",
            "value": "512Mi"
        },
        {
            "name": "CONSOLE_MEMORY",
            "value": "128Mi"
        },
        {
            "name": "CONSOLE_BRANDING",
            "value": "openshift"
        },
        {
            "name": "CONSOLE_VERSION",
            "value": "4.2.0"
        },
        {
            "name": "VOLUME_SIZE",
            "value": ""
        },
        {
            "name": "ADMIN_USERS",
            "value": ""
        },
        {
            "name": "USER_LOGINS",
            "value": ""
        },
        {
            "name": "IDLE_TIMEOUT",
            "value": "7200"
        },
        {
            "name": "TERMINAL_IMAGE",
            "value": "",
            "required": false
        },
        {
            "name": "JUPYTERHUB_IMAGE",
            "value": "quay.io/jupyteronopenshift/jupyterhub:3.0.7",
            "required": true
        },
        {
            "name": "TERMINAL_ENVVARS",
            "value": ""
        },
        {
            "name": "WORKSHOP_ENVVARS",
            "value": ""
        },
        {
            "name": "GATEWAY_ENVVARS",
            "value": ""
        },
        {
            "name": "OC_VERSION",
            "value": ""
        },
        {
            "name": "ODO_VERSION",
            "value": ""
        },
        {
            "name": "KUBECTL_VERSION",
            "value": ""
        },
        {
            "name": "JUPYTERHUB_CONFIG",
            "value": "",
            "required": false
        },
        {
            "name": "JUPYTERHUB_HOST",
            "value": ""
        },
        {
            "name": "LETS_ENCRYPT",
            "value": "false",
            "required": true
        },
        {
            "name": "OAUTH_CLIENT_SECRET",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{32}"
        }
    ],
    "objects": [
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-${PROJECT_NAME}-hub",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            }
        },
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-${PROJECT_NAME}-user",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            }
        },
        {
            "kind": "OAuthClient",
            "apiVersion": "oauth.openshift.io/v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-${PROJECT_NAME}-console",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            },
            "secret": "${OAUTH_CLIENT_SECRET}",
            "grantMethod": "auto",
            "redirectURIs": [
                "https://${APPLICATION_NAME}-${PROJECT_NAME}.${CLUSTER_SUBDOMAIN}/hub/oauth_callback"
            ]
        },
        {
            "kind": "RoleBinding",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-edit",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${APPLICATION_NAME}-${PROJECT_NAME}-hub"
                }
            ],
            "roleRef": {
                "name": "edit"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            }
        },
        {
            "kind": "ConfigMap",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-cfg",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            },
            "data": {
                "jupyterhub_config.py": "${JUPYTERHUB_CONFIG}",
                "user_logins.csv": "${USER_LOGINS}"
            }
        },
        {
            "kind": "ConfigMap",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-env",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            },
            "data": {
                "terminal.sh": "${TERMINAL_ENVVARS}",
                "workshop.sh": "${WORKSHOP_ENVVARS}",
                "gateway.sh": "${GATEWAY_ENVVARS}"
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${GIT_REPOSITORY_URL}",
                        "ref": "${GIT_REPOSITORY_REF}"
                    },
                    "contextDir": "jupyterhub"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "DockerImage",
                            "name": "${JUPYTERHUB_IMAGE}"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${APPLICATION_NAME}-hub:latest"
                    }
                }
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "spawner"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${APPLICATION_NAME}-hub:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                            "deploymentconfig": "${APPLICATION_NAME}",
                            "spawner": "terminal-server",
                            "class": "spawner"
                        }
                    },
                    "spec": {
                        "serviceAccountName": "${APPLICATION_NAME}-${PROJECT_NAME}-hub",
                        "containers": [
                            {
                                "name": "spawner",
                                "image": "${APPLICATION_NAME}-hub:latest",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "resources": {
                                    "limits": {
                                        "memory": "${SPAWNER_MEMORY}"
                                    },
                                    "requests": {
                                        "memory": "${SPAWNER_MEMORY}"
                                    }
                                },
                                "readinessProbe": {
                                    "httpGet": {
                                        "path": "/hub/api",
                                        "port": 8080,
                                        "scheme": "HTTP"
                                    },
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3,
                                    "timeoutSeconds": 1
                                },
                                "livenessProbe": {
                                    "httpGet": {
                                        "path": "/hub/api",
                                        "port": 8080,
                                        "scheme": "HTTP"
                                    },
                                    "periodSeconds": 10,
                                    "successThreshold": 1,
                                    "failureThreshold": 3,
                                    "timeoutSeconds": 1
                                },
                                "env": [
                                    {
                                        "name": "CONFIGURATION_TYPE",
                                        "value": "terminal-server"
                                    },
                                    {
                                        "name": "APPLICATION_NAME",
                                        "value": "${APPLICATION_NAME}"
                                    },
                                    {
                                        "name": "TERMINAL_IMAGE",
                                        "value": "${TERMINAL_IMAGE}"
                                    },
                                    {
                                        "name": "WORKSHOP_MEMORY",
                                        "value": "${WORKSHOP_MEMORY}"
                                    },
                                    {
                                        "name": "CONSOLE_MEMORY",
                                        "value": "${CONSOLE_MEMORY}"
                                    },
                                    {
                                        "name": "CONSOLE_BRANDING",
                                        "value": "${CONSOLE_BRANDING}"
                                    },
                                    {
                                        "name": "CONSOLE_VERSION",
                                        "value": "${CONSOLE_VERSION}"
                                    },
                                    {
                                        "name": "VOLUME_SIZE",
                                        "value": "${VOLUME_SIZE}"
                                    },
                                    {
                                        "name": "ADMIN_USERS",
                                        "value": "${ADMIN_USERS}"
                                    },
                                    {
                                        "name": "IDLE_TIMEOUT",
                                        "value": "${IDLE_TIMEOUT}"
                                    },
                                    {
                                        "name": "OC_VERSION",
                                        "value": "${OC_VERSION}"
                                    },
                                    {
                                        "name": "ODO_VERSION",
                                        "value": "${ODO_VERSION}"
                                    },
                                    {
                                        "name": "KUBECTL_VERSION",
                                        "value": "${KUBECTL_VERSION}"
                                    },
                                    {
                                        "name": "OAUTH_CLIENT_SECRET",
                                        "value": "${OAUTH_CLIENT_SECRET}"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "mountPath": "/opt/app-root/data",
                                        "name": "data"
                                    },
                                    {
                                        "name": "config",
                                        "mountPath": "/opt/app-root/configs"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "data",
                                "persistentVolumeClaim": {
                                    "claimName": "${APPLICATION_NAME}-hub-data"
                                }
                            },
                            {
                                "name": "config",
                                "configMap": {
                                    "name": "${APPLICATION_NAME}-cfg",
                                    "defaultMode": 420
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "PersistentVolumeClaim",
            "metadata": {
                "name": "${APPLICATION_NAME}-hub-data",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "1Gi"
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    },
                    {
                        "name": "8081-tcp",
                        "protocol": "TCP",
                        "port": 8081,
                        "targetPort": 8081
                    }
                ],
                "selector": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "deploymentconfig": "${APPLICATION_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                },
                "annotations": {
                    "kubernetes.io/tls-acme": "${LETS_ENCRYPT}"
                }
            },
            "spec": {
                "host": "${JUPYTERHUB_HOST}",
                "to": {
                    "kind": "Service",
                    "name": "${APPLICATION_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge",
                    "insecureEdgeTerminationPolicy": "Redirect"
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${APPLICATION_NAME}-app",
                "namespace": "${PROJECT_NAME}",
                "labels": {
                    "app": "${APPLICATION_NAME}-${PROJECT_NAME}",
                    "spawner": "terminal-server",
                    "class": "spawner"
                }
            },
            "spec": {
                "lookupPolicy": {
                    "local": true
                },
                "tags": [
                    {
                        "name": "latest",
                        "from": {
                            "kind": "DockerImage",
                            "name": "quay.io/openshiftlabs/workshop-terminal:2.10.2"
                        }
                    }
                ]
            }
        }
    ]
}
